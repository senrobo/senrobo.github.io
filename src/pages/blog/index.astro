---
import AppLayout from "../../layouts/AppLayout.astro";
import BlogCard from "../../components/BlogCard.astro";
import Header from "../../components/Header.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const title = "Blog | Sentinels Robotics";
const description =
  "Blog page where we post our new found knowledge and document the progress of the robot";
---

<AppLayout title={title} description={description}>
  <section class="px-6 lg:px-0 mx-auto max-w-3xl text-left mt-12">
    <Header title="Blog" />
    <p
      class="max-w-prose mb-10 font-normal dark:text-zinc-400 text-zinc-600 leading-relaxed"
    >
      {description}
    </p>
    <ul class="flex flex-col gap-8 sm:border-l sm:dark:border-zinc-800">
      {
        posts.map((post) => (
          <BlogCard
            title={post.data.title}
            pubDate={post.data.pubDate}
            description={post.data.description}
            url={`/blog/${post.slug}/`}
          />
        ))
      }
    </ul>
  </section>
</AppLayout>