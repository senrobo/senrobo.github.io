---
interface Props {
  date: Date;
}

const { date } = Astro.props;
---

<time
  class="text-center text-zinc-500"
  datetime={date.toISOString()}
  transition:name="blogTime"
>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "long",
      day: "numeric",
    })
  }
</time>
