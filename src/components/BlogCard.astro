---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  url: string;
}

const { title, description, pubDate, url } = Astro.props;

const fullDate = pubDate.toLocaleDateString("en", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<li
  class="relative dark:text-zinc-400 text-zinc-600 flex flex-col gap-2 sm:gap-3 sm:p-5 dark:sm:hover:bg-zinc-800 sm:hover:bg-zinc-200 transition-colors"
>
  <time
    datetime={pubDate.toISOString()}
    class="block text-sm tracking-relaxed dark:text-zinc-400 text-zinc-600"
    transition:name="blogTime"
  >
    {fullDate}
  </time>
  <a
    class="text-lg before:absolute before:inset-0 font-semibold dark:text-zinc-100 text-zinc-700"
    href={url}
    transition:name="blogTitle"
  >
    {title}
  </a>
  <p class="leading-relaxed max-w-prose">{description}</p>
</li>
